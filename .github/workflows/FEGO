    <script>
        // Animaciones suaves al hacer scroll
        gsap.registerPlugin(ScrollTrigger);
        
        gsap.utils.toArray('.card').forEach(card => {
            gsap.from(card, {
                y: 50,
                opacity: 0,
                duration: 1,
                scrollTrigger: {
                    trigger: card,
                    start: "top bottom-=100",
                    toggleActions: "play none none reverse"
                }
            });
        });
    </script>
